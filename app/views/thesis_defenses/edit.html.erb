<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="index-content">
    <div class="container">
            <div href="blog-ici.html" class="w-100">
                <div class="card">
                    <div class="mb-5 d-flex justify-content-between">
                        <div class="container rounded bg-white mt-5 mb-5">
                            <div class="row">
                                <div class="col-md-4 border-right">
                                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                                        <img class="rounded-circle mt-5" width="150px" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRxcbLJB8h01-Ae_J0w4i8MLm-jMNqigGplhA&usqp=CAU">
                                            <span class="font-weight-bold">email</span>
                                            <span class="text-black-50"><%= current_resource.email %></span>
                                            <span> </span>
                                    </div>
                                </div>
                                <div class="col-md-8 border-right">
                                    <div class="p-3 py-5">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h4 class="text-right">Update Thesis Defence</h4>
                                        </div>
                                       <%= form_with model: @thesis_defense, url: [@graduation_work, @thesis_defense], method: :put do |f| %>
                                            <div class="row mt-2">
                                                <div class="col-md-6">
                                                    <label class="labels">Localization:</label><br />
                                                    <%= f.text_field :defence_address, class: 'form-control', placeholder: 'localization' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="labels">Final Grade(optional)</label>
                                                    <%= f.select :final_grade, 
                                                    {
                                                        "Grade" => [
                                                            ['5', 5.0],
                                                            ['4', 4.0],
                                                            ['3', 3.0],
                                                            ['2', 2.0],
                                                            ]
                                                    },
                                                    class: 'form-control' %>
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-12">
                                                    <label class="labels">Date of defence</label><br />
                                                    <%= f.date_field :date_of_defence, class: 'form-control'%>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class="labels">Author index</label>
                                                    <%= f.text_field :author_index, class: 'form-control', placeholder: 'author index', value: @thesis_defense.author_id%>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class="labels">Evaluator email</label><br />
                                                    <%= f.text_field :evaluator_email, class: 'form-control', placeholder: 'evaluator email', value: @thesis_defense.evaluator.email%>
                                                </div>
                                            </div>
                                            <div class="mt-5 text-center">
                                                <%= f.submit 'Save Thesis Defence', class: "btn btn-primary profile-button"%>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
