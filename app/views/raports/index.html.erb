<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center activity">
                <div>
                    <span class="activity-done">
                        <% if params[:me_scope] %>
                           Yours
                        <% end %>
                        Graduations Work
                    </span>
                </div>
                <div class="icons">
                    <%= link_to 'Generate csv', generate_csv_raports_path(search_params: @search_params), method: :post %>
                </div>
            </div>
            <div class="mt-3">
                <ul class="list list-inline">
                    <% @graduation_works.each do |gd| %>
                        <li class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <div class="ml-2">
                                    <h6 class="mb-0"><%= gd.title %></h6>
                                    <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                        <div><span class="ml-2">Topic: <%= gd.topic %></span></div><br />
                                        <div><span class="ml-2">, Date of submission: <%= gd.date_of_submission.to_date %></span></div><br />
                                        <div class="ml-3"><span class="ml-2"><%=  %></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column mr-2">
                                    <div class="profile-image"><%= button_to 'Details', graduation_work_path(gd), class: 'btn btn-primary', method: :get %></div>
                                </div>
                            </div>
                        </li>
                    <% end %>
                </ul>
            </div>
            <div class="d-flex justify-content-between align-items-center activity">
                <div><span class="activity-done"></span></div>
                <div class="icons"><%== pagy_nav(@pagy) %></div>
            </div>
        </div>
    </div>
</div>