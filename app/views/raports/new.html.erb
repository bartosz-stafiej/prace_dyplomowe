<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="index-content">
    <div class="container">
            <div href="blog-ici.html" class="w-100">
                <div class="card">
                    <div class="mb-5 d-flex justify-content-between">
                        <div class="container rounded bg-white mt-5 mb-5">
                            <div class="row">
                                <div class="col-md-4 border-right">
                                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                                        <img class="rounded-circle mt-5" width="150px" src="https://media.istockphoto.com/vectors/business-report-icon-isolated-on-white-background-vector-id1359860011?b=1&k=20&m=1359860011&s=170667a&w=0&h=o4D_d9byQUfyCHgPKjiTYhLbif1Sl_iaFJprWvL22jA=">
                                            <span class="font-weight-bold"></span>
                                            <span class="text-black-50"></span>
                                            <span> </span>
                                    </div>
                                </div>
                                <div class="col-md-8 border-right">
                                    <div class="p-3 py-5">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h4 class="text-right">Generate raport</h4>
                                        </div>
                                        <%= form_with url: raports_path do |f| %>
                                            <div class="row mt-2">
                                                <div class="col-md-6">
                                                    <label class="labels">Faculty</label>
                                                    <%= f.text_field :faculty, class: 'form-control', placeholder: 'faculty' %>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="labels">Field of Study</label>
                                                    <%= f.text_field :field_of_study, class: 'form-control', placeholder: 'field of study' %>
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-12">
                                                    <label class="labels">Key words</label>
                                                    <%= f.text_field :key_word, class: 'form-control', placeholder: 'Key words' %>
                                                </div>
                                                <div class="row mt-2">
                                                    <div class="col-md-6">
                                                        <label class="labels">Date from:</label>
                                                        <%= f.date_field :date_from, class: 'form-control' %>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label class="labels">Date to:</label>
                                                        <%= f.date_field :date_to, class: 'form-control' %>
                                                    </div>
                                                </div>                                                
                                                <div class="col-md-12">
                                                    <label class="labels">Grade</label><br />
                                                    <%= f.select :grade, 
                                                    {
                                                        "Grade" => [
                                                            ['Select', nil],
                                                            ['5', 5.0],
                                                            ['4', 4.0],
                                                            ['3', 3.0],
                                                            ['2', 2.0]
                                                            ]
                                                    },
                                                    class: 'form-control'  %>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class="labels">Supervisor email</label><br />
                                                    <%= f.text_field :supervisor, class: 'form-control', placeholder: 'supervisor email' %>
                                                </div>
                                                <div class="col-md-12">
                                                    <label class="labels">Evaluator email</label><br />
                                                    <%= f.text_field :evaluator, class: 'form-control', placeholder: 'evaluator email' %>
                                                </div>
                                            </div>
                                            <div class="mt-5 text-center">
                                                <%= f.submit 'Generate Raport', class: "btn btn-primary profile-button" %>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
