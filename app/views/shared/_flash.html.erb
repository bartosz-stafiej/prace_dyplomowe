<% flash.each do |type, msg| %>
    <% if type == 'notice' %>
        <div class="alert alert-info text-center">
            <%= msg %>
        </div>
    <% elsif type == 'alert' %>
        <div class="alert alert-warning text-center">
            <%= msg %>
        </div>
    <% else %>
        <div class="alert alert-danger text-center">
            <%= msg %>
        </div>
    <% end %>
  </div>
<% end %>