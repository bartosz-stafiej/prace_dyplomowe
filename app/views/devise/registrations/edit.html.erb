<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="index-content">
    <div class="container">
            <div href="blog-ici.html" class="w-100">
                <div class="card">
                    <div class="mb-5 d-flex justify-content-between">
                        <div class="container rounded bg-white mt-5 mb-5">
                            <div class="row">
                                <div class="col-md-4 border-right">
                                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                                        <img class="rounded-circle mt-5" width="150px" src="https://icons-for-free.com/iconfiles/png/512/student+icon-1320184412790928936.png">
                                            <span class="font-weight-bold">email</span>
                                            <span class="text-black-50"><%= current_resource.email %></span>
                                            <span> </span>
                                    </div>
                                </div>
                                <div class="col-md-8 border-right">
                                    <div class="p-3 py-5">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h4 class="text-right">Profile Settings</h4>
                                        </div>
                                        <%= form_with url: current_resource_edit_profile_path, method: :put do |f| %>
                                            <div class="row mt-2">
                                                <div class="col-md-6">
                                                    <label class="labels">Name</label>
                                                    <%= f.text_field :first_name, class: 'form-control', value: current_resource.first_name %>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="labels">Surname</label>
                                                    <%= f.text_field :last_name, class: 'form-control', value: current_resource.last_name %>
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-12">
                                                    <label class="labels">Email</label>
                                                    <%= f.text_field :email, class: 'form-control', value: current_resource.email %>
                                                </div>
                                                <% if current_resource_student? %>
                                                    <div class="col-md-12">
                                                        <label class="labels">Telephone Number</label>
                                                        <%= f.text_field :telephone_number, class: 'form-control', value: current_resource.telephone_number %>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="labels">Index: </label>
                                                        <%= f.text_field :id, class: 'form-control', value: current_resource.id, disabled: true %>
                                                    </div>
                                                <% else %>
                                                    <div class="col-md-12">
                                                        <label class="labels">Academic degree</label>
                                                        <%= f.text_field :academic_degree, class: 'form-control', value: current_resource.academic_degree %>
                                                    </div>
                                                <% end %>
                                            </div>
                                            <div class="mt-5 text-center">
                                                <%= f.submit 'Save Profile', class: "btn btn-primary profile-button"%>
                                            </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
